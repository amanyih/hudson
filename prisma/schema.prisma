generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  email        String    @unique
  passwordHash String?
  googleId     String?   @unique
  provider     String?
  verified     Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  badges       String[] @default([])
  isPremium    Boolean @default(false)

  Result       Result[]
  UserData     UserData?
  Config       Config?
  RaceResult RaceResult[]
  Race Race[]
}

model Result {
  id              String   @id @default(uuid())
  wpm             Float
  rawWpm          Float
  accuracy        Float
  charactersTotal Int
  mode            String
  submode         Int
  punctuation     Boolean
  numbers         Boolean
  testLanguage    String
  keySpacing      Float[]
  keyDuration     Float[]
  duration        Float
  userId          String
  createdAt       DateTime @default(now())

  User User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserData {
  id             String  @id @default(uuid())
  displayName  String @default("")
  avatar       String @default("")
  xp             Int @default(0)
  bio            String? @default("")
  personalBest   Float @default(0)
  completedTests Int @default(0)
  timeSpent      Float @default(0)
  userId         String  @unique
  User User @relation(fields: [userId], references: [id])
}

model Config {
  id     String @id @default(uuid())
  theme  Theme @default(SYSTEM)
  words  Int @default(25)
  time   Int @default(60)
  mode   Mode @default(TIME)
  userId String @unique
  User   User   @relation(fields: [userId], references: [id])
}

model Badge {
  id String @id @default(uuid())
  name String
  description String
  icon String
  xp Int
  type  BadgeType
}

model Race {
  id String @id @default(uuid())
  name String
  description String?
  subMode Int 
  startTime DateTime
  language String
  hasNumbers Boolean @default(false)
  hasPunctuation Boolean @default(false) 
  isPublic Boolean @default(false)
  participants String[]
  invitedUsers String[]
  chatMessages Message[] @relation("RaceMessages")
  createdAt DateTime @default(now())
  startedAt DateTime?
  isFinished Boolean @default(false)
  userId String


  RaceResult RaceResult[]
  User User @relation(fields: [userId], references: [id])
}

model RaceResult {
  id String @id @default(uuid())
  raceId String
  userId String
  wordsTyped Int
  completionTime Int?
  accuracy Float
  rank Int
  isWinner Boolean @default(false)

  race Race @relation(fields: [raceId], references: [id], onDelete: Cascade)
  participant    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Message {
  id String @id @default(uuid())
  content String
  senderId String
  raceId String
  createdAt DateTime @default(now())

  race Race @relation("RaceMessages", fields: [raceId], references: [id])
}

enum BadgeType {
  WPM
  ACCURACY
  TESTS
  TIME
}

enum Theme {
  LIGHT
  DARK
  SYSTEM
}

enum Mode {
  WORDS
  TIME
}